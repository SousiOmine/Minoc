{
  "name": "minoc",
  "version": "0.1.0",
  "description": "LLMエージェント - PC操作とツール呼び出し履歴の管理",
  "main": "main.ts",
  "exports": "./main.ts",
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --allow-net --allow-env main.ts",
    "start": "deno run --allow-read --allow-write --allow-run --allow-net --allow-env main.ts",
    "build": "deno compile --allow-read --allow-write --allow-run --allow-net --allow-env --output=minoc main.ts",
    "install": "deno task build && echo バイナリファイル 'minoc' を作成しました。このファイルをPATHに追加するか、適切な場所に移動してください。",
    "test": "deno test --allow-read --allow-write --allow-run --allow-net --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@std/log": "jsr:@std/log@^0.224.9",
    "@std/fs": "jsr:@std/fs@^1.0.4",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/uuid": "jsr:@std/uuid@^1.0.4",
    "@std/toml": "jsr:@std/toml@^1.0.1",
    "openai": "npm:openai@^4.67.3"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
